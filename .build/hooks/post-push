#!/bin/bash
# Post-push hook for wiki updates
# This file is copied to .git/hooks/post-receive or run manually
#
# Called after push completes to update Wiki

REPO_ROOT="$(git rev-parse --show-toplevel)"
PENDING_FILE="$REPO_ROOT/.build/.wiki-update-pending"

if [ -f "$PENDING_FILE" ]; then
    echo ""
    echo "ðŸ“š Processing pending wiki update..."
    python "$REPO_ROOT/.build/hooks/process-wiki-update.py"
    rm -f "$PENDING_FILE"
fi
